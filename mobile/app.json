{
  "expo": {
    "name": "WealthBuddy",
    "slug": "wealthbuddy-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "wealthbuddy",
    "intentFilters": [
      {
        "action": "VIEW",
        "data": [
          {
            "scheme": "wealthbuddy"
          }
        ],
        "category": [
          "BROWSABLE",
          "DEFAULT"
        ]
      }
    ],
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wealthbuddy.ai",
      "buildNumber": "1",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to authenticate securely into your financial dashboard",
        "NSCameraUsageDescription": "Camera access is needed for document scanning features"
      }
    },
    "android": {
      "package": "com.wealthbuddy.ai",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "wealthbuddy-ai-mobile"
      }
    },
    "owner": "wealthbuddy",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "primaryColor": "#4a9eff",
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#4a9eff"
    }
  }
}
