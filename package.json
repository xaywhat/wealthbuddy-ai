{
  "name": "wealthbuddy-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:mobile": "set CAPACITOR_BUILD=true && next build --no-lint",
    "cap:add": "npx cap add",
    "cap:sync": "npx cap sync",
    "cap:open": "npx cap open",
    "cap:run": "npx cap run",
    "build:android": "npm run build:mobile && npx cap sync android && npx cap build android",
    "android": "npm run build:mobile && npx cap sync android && npx cap open android",
    "release:android": "npm run build:mobile && npx cap sync android && cd android && ./gradlew assembleRelease",
    "release:bundle": "npm run build:mobile && npx cap sync android && cd android && ./gradlew bundleRelease",
    "generate:keystore": "scripts\\generate-keystore.bat"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.1",
    "@capacitor/cli": "^7.4.1",
    "@capacitor/core": "^7.4.1",
    "@supabase/supabase-js": "^2.50.3",
    "axios": "^1.10.0",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "nordigen-node": "^1.4.1",
    "openai": "^5.8.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
